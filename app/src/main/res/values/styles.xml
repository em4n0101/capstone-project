<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- text -->
    <style name="game_detail_label_summary">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_detail_info</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="game_detail_label_title">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_detail_title</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="game_detail_label_info">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_detail_info</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="game_detail_description">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_detail_info</item>
        <item name="android:layout_marginStart">@dimen/margin_mini</item>
        <item name="android:layout_marginEnd">@dimen/margin_mini</item>
    </style>
</resources>